@model Baitaplonweb.Models. NguoiDangKy

@{
    ViewBag.Title = "Xóa Tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa người đăng kí</h2>

<h3>Thông tin người đăng kí</h3>
<div>
    <h4>@Model.NguoiDangKyID</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.NguoiDangKyID</dd>

        <dt>Họ tên</dt>
        <dd>@(Model.HoTen)</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
    </div>
}
